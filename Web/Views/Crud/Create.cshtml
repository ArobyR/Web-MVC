
@{
    ViewBag.Title = "Create";
}

<h2>Create Movie</h2>
<form action="/Crud/Create" method="post">
    <label for="movie-name">Movie name:</label> <br />
    <input type="text" id="movie-name" name="movie-name" /> <br />
    <label for="author">Author:</label> <br />
    <input type="text" id="author" name="author" /> <br />
    <label for="actors">Actor:</label> <br />
    <input type="text" id="actor" name="actors" /> <br />
    <label for="year">Year:</label> <br />
    <input type="text" id="year" name="year" /> <br />
    <label for="sipnosis">Sipnosis:</label> <br />
    <textarea name="sipnosis" cols="50" rows="5"></textarea>
    <br />
    <input type="submit" value="submit" />
</form>
<br />
<h3>Information:</h3>
@if (ViewBag.MovieData != null)
{
    <p>@ViewBag.MovieData["movie-name"]</p>
    <p>@ViewBag.MovieData["author"]</p>
    <p>@ViewBag.MovieData["actors"]</p>
    <p>@ViewBag.MovieData["year"]</p>
    <p>@ViewBag.MovieData["sipnosis"]</p>
}